                                 <!--request-timeout="2000"-->
                                 <!--reply-timeout="2000"-->
            <!--/>-->

    <int-ip:tcp-outbound-channel-adapter id="outboundClient"
                                         channel="output"
                                         connection-factory="tcp.client"/>

